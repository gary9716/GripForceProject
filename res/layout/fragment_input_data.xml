<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Disp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/EditText_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="40dp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Disp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性別："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup
            android:id="@+id/RadioGroup_Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/RadioButton_Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男" />

            <RadioButton
                android:id="@+id/RadioButton_Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Disp_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="生日："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.ui.customizedwidgets.DateDisplayPicker
            android:id="@+id/customizedClass_BirthDayDatePicker"
            style="@android:style/Widget.Holo.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="請點擊並選擇你的生日日期" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Disp_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="慣用手："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup
            android:id="@+id/RadioGroup_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/RadioButton02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="左" />

            <RadioButton
                android:id="@+id/RadioButton01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Disp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年級："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup
            android:id="@+id/RadioButtonGroup_grades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/button_firstGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="一" />

            <RadioButton
                android:id="@+id/button_secondGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二" />

            <RadioButton
                android:id="@+id/button_thirdGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三" />

            <RadioButton
                android:id="@+id/button_forthGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四" />

            <RadioButton
                android:id="@+id/button_fifthGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五" />

            <RadioButton
                android:id="@+id/button_sixthGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Disp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="居住城市："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/EditText_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Disp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="編號："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/Number_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

</LinearLayout>
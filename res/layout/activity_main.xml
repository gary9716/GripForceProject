<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/char_box_bottom_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mhci.gripandtipforce.MainActivity" >

    <Button
        android:id="@+id/eraserBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/penBtn"
        android:layout_alignBottom="@+id/penBtn"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/penBtn"
        android:text="eraser" />

    <Button
        android:id="@+id/cleanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eraserBtn"
        android:layout_alignBottom="@+id/eraserBtn"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/eraserBtn"
        android:text="clean" />

    <LinearLayout
        android:id="@+id/ex_chars_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/penBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" >

        <LinearLayout
            android:id="@+id/char1_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/exChar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/char_box_bottom_margin"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical|center_horizontal"
                android:height="@dimen/char_box_height"
                android:maxHeight="@dimen/char_box_height"
                android:maxWidth="@dimen/char_box_width"
                android:text="大"
                android:textSize="50sp"
                android:width="@dimen/char_box_width" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/char2_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/exChar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/char_box_bottom_margin"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical|center_horizontal"
                android:height="@dimen/char_box_height"
                android:maxHeight="@dimen/char_box_height"
                android:maxWidth="@dimen/char_box_width"
                android:text="大"
                android:textSize="50sp"
                android:width="@dimen/char_box_width" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/char3_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/exChar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/char_box_bottom_margin"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical|center_horizontal"
                android:height="@dimen/char_box_height"
                android:maxHeight="@dimen/char_box_height"
                android:maxWidth="@dimen/char_box_width"
                android:text="大"
                android:textSize="50sp"
                android:width="@dimen/char_box_width" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/char4_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/exChar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/char_box_bottom_margin"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical|center_horizontal"
                android:height="@dimen/char_box_height"
                android:maxHeight="@dimen/char_box_height"
                android:maxWidth="@dimen/char_box_width"
                android:text="大"
                android:textSize="50sp"
                android:width="@dimen/char_box_width" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/char5_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/exChar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/char_box_bottom_margin"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical|center_horizontal"
                android:height="@dimen/char_box_height"
                android:maxHeight="@dimen/char_box_height"
                android:maxWidth="@dimen/char_box_width"
                android:text="大"
                android:textSize="50sp"
                android:width="@dimen/char_box_width" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/penBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/penTipInfo"
        android:layout_marginLeft="350dp"
        android:text="pen" />

    <TextView
        android:id="@+id/penTipInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="37dp"
        android:text="pressure value"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/settingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ex_chars_group"
        android:layout_marginRight="83dp"
        android:layout_marginTop="20dp"
        android:minHeight="50dp"
        android:minWidth="50dp" >

    </RelativeLayout>

</RelativeLayout>